<Window x:Class="Training.CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Interface Future Proofing" Height="377.888" Width="562.649">
    <Grid Margin="0,0,22,0">
        <Button x:Name="ConcreteClassButton" Content="Get data using concrete class" HorizontalAlignment="Left" VerticalAlignment="Top" Width="181" Height="40" Margin="10,10,0,0" Click="ConcreteClassButton_Click"/>
        <Button x:Name="InterfaceButton" Content="Get data using interface" HorizontalAlignment="Left" VerticalAlignment="Top" Width="173" Height="40" Margin="200,10,0,0" Click="InterfaceButton_Click"/>
        <Button x:Name="ClearDataButton" Content="Clear data" HorizontalAlignment="Left" VerticalAlignment="Top" Width="143" Height="40" Margin="378,10,0,0" Click="ClearDataButton_Click"/>
        <ListBox x:Name="EmployeeList" HorizontalAlignment="Left" Height="271" Margin="10,66,0,0" VerticalAlignment="Top" Width="511">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Firstname}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
